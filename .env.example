# Zebra Ecosystem Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# =============================================================================
# SECURITY NOTICE
# =============================================================================
# This file contains PLACEHOLDER values only.
# Real credentials go in .env (which is .gitignored)
# Follow docs/SECURITY_ARCHITECTURE.md for proper credential management

# =============================================================================
# INFRASTRUCTURE CREDENTIALS (Zone 2 - Local Ollama only)
# =============================================================================

# Proxmox
PROXMOX_HOST=[HOSTNAME]
PROXMOX_USER=[USERNAME]
PROXMOX_PASSWORD=[PASSWORD]
PROXMOX_VERIFY_SSL=false

# Docker
DOCKER_HOST=[HOSTNAME]
DOCKER_TLS_VERIFY=0

# SSH
SSH_PRIVATE_KEY_PATH=[PATH_TO_KEY]
SSH_KNOWN_HOSTS_PATH=[PATH_TO_KNOWN_HOSTS]

# =============================================================================
# AI API KEYS (Zone 1 - Cloud AI with rate limiting)
# =============================================================================

# Anthropic Claude
ANTHROPIC_API_KEY=[YOUR_CLAUDE_API_KEY]
ANTHROPIC_MAX_TOKENS_PER_DAY=50000

# OpenAI (optional)
OPENAI_API_KEY=[YOUR_OPENAI_API_KEY]
OPENAI_ORG_ID=[YOUR_ORG_ID]

# Perplexity (optional)
PERPLEXITY_API_KEY=[YOUR_PERPLEXITY_KEY]

# =============================================================================
# OLLAMA (Zone 2 - Local inference)
# =============================================================================

OLLAMA_HOST=http://[OLLAMA_VM_IP]:11434
OLLAMA_MODEL_DEFAULT=mistral

# =============================================================================
# TRADING (Zone 3 - Highest security)
# =============================================================================

# Interactive Brokers
IB_GATEWAY_HOST=[IB_GATEWAY_IP]
IB_GATEWAY_PORT=4001
IB_ACCOUNT=[ACCOUNT_NUMBER]

# Alpha Vantage (for market data)
ALPHA_VANTAGE_API_KEY=[YOUR_API_KEY]

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Grafana
GRAFANA_URL=[GRAFANA_URL]
GRAFANA_API_KEY=[API_KEY]

# Prometheus  
PROMETHEUS_URL=[PROMETHEUS_URL]

# Loki
LOKI_URL=[LOKI_URL]

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database (if needed)
DATABASE_URL=sqlite:///./zebra.db

# Cost Tracking
COST_TRACKER_FILE=.cost_tracker.json
COST_MONTHLY_BUDGET=30.00
COST_WEEKLY_ALERT=25.00

# Security
SECRET_KEY=[GENERATE_RANDOM_SECRET]
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_CLAUDE_API=false
ENABLE_OPENAI_API=false
ENABLE_OLLAMA=true
ENABLE_COST_TRACKING=true
ENABLE_SECURITY_CHECKS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Testing
TEST_MODE=false
MOCK_EXTERNAL_APIS=true

# Model Registry
MODEL_REGISTRY_FILE=models_registry.json
MODEL_REGISTRY_AUTO_UPDATE=true
MODEL_REGISTRY_UPDATE_FREQUENCY=weekly

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in real values in .env
# 3. NEVER commit .env (it's in .gitignore)
# 4. Rotate keys quarterly (see docs/SECURITY_POLICIES.md)
# 5. Use 1Password or similar for credential storage
# 6. See docs/CREDENTIAL_MANAGEMENT.md for details